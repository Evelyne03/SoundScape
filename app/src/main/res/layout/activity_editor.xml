<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditorActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >
    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/fileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a file"
        android:layout_marginBottom="20dp"
        android:onClick="openFileManager">

    </Button>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/albumCoverImageView"
        android:src="@drawable/album_cover"
        >

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Song missing"
        android:textSize="24sp"
        android:id="@+id/songNameTextView"
        android:layout_marginTop="24dp"
        >
    </TextView>

    <ProgressBar
        android:id="@+id/soundProgressBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity=""
        >
        <Button
            android:id="@+id/lowerPitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Decrease Pitch"
            android:onClick="decreasePitch"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            >
        </Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+0"
            android:id="@+id/pitchValue"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:layout_weight="1">

        </TextView>

        <Button
            android:id="@+id/increasePitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Increase Pitch"
            android:layout_marginEnd="10dp"
            android:onClick="increasePitch"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            >
        </Button>
</LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/applyButton"
        android:text="Apply Changes"
        android:onClick="modifyPitch"
        android:layout_marginTop="20dp"
        >

    </Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playButton"
        android:text="Play"
        android:onClick="playAudio"
        android:layout_marginTop="20dp"
        >

    </Button>


</LinearLayout>