<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditorActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp">



    <ImageView
        android:id="@+id/albumCoverImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/album_cover"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/songNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Song missing"
        android:textSize="24sp"
        android:layout_marginBottom="10dp" />

    <SeekBar
        android:id="@+id/soundProgressBar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:thumbTint="#702963"
        android:progressTint="#702963"/>


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/listenedDurationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:layout_marginRight="5dp"
            android:textStyle="bold"
            android:textColor="#702963"/>

        <TextView
            android:id="@+id/slashTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/songDurationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textStyle="bold"
            android:textColor="#702963"/>
    </LinearLayout>

    <Button
        android:layout_marginTop="0dp"
        android:id="@+id/fileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a file"
        android:layout_marginBottom="20dp"
        android:onClick="openFileManager"/>


    <!-- Pitch Control Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/lowerPitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="decreasePitch"
            android:text="Decrease Pitch" />

        <TextView
            android:id="@+id/pitchValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+0"
            android:textAlignment="center" />

        <Button
            android:id="@+id/increasePitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="increasePitch"
            android:text="Increase Pitch" />
    </LinearLayout>

    <!-- Speed Control Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/decreaseSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="decreaseSpeed"
            android:text="Decrease Speed" />

        <TextView
            android:id="@+id/speedValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1.0x"
            android:textAlignment="center" />

        <Button
            android:id="@+id/increaseSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="increaseSpeed"
            android:text="Increase Speed" />
    </LinearLayout>

    <!-- Reverb Control Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/decreaseReverb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="decreaseReverb"
            android:text="Decrease Reverb" />

        <TextView
            android:id="@+id/reverbValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textAlignment="center" />

        <Button
            android:id="@+id/increaseReverb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="increaseReverb"
            android:text="Increase Reverb" />
    </LinearLayout>

    <Button
        android:id="@+id/denoiseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Denoise"
        android:onClick="denoiseAudio"
        android:layout_marginBottom="5dp"/>
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/applyButton"
        android:text="Apply Changes"
        android:onClick="applyChanges"
        android:layout_marginBottom="5dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/discardButton"
        android:text="Discard Changes"
        android:onClick="discardChanges"
        android:layout_marginBottom="5dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playButton"
            android:text="Play"
            android:onClick="playAudio"
            android:layout_marginRight="20dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stopButton"
            android:text="Stop"
            android:onClick="stopAudio"/>
    </LinearLayout>


</LinearLayout>
